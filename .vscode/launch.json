{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev",
            "serverReadyAction": {
                "pattern": ".*?Local:.+?([0-9]+).*",
                "uriFormat": "http://localhost:%s",
                "action": "debugWithChrome"
            }
        }
    ]
}
